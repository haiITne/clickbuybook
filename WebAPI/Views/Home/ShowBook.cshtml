@model List<WebAPI.Models.Sach>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Sách</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-container {
            margin-bottom: 20px;
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>Mặt hàng có sẵn</h2>
        <div class="row">
            @foreach (var sach in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 card-container">
                    <div class="card">
                        <img src="@Url.Content("~/Content/images/" + sach.MaSach + ".jpg")" class="card-img-top" alt="@sach.TenSach">
                        <div class="card-body">
                            <h5 class="card-title">@sach.TenSach</h5>
                            <p class="card-text">@sach.GiaBan.ToString("C")</p>
                            @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                            {
                                @Html.Hidden("id", sach.MaSach)
                                <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
