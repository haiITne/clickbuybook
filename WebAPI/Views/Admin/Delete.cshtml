@model WebAPI.Models.Sach

<h2>Xóa sách</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa sách này?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên Sách</dt>
        <dd>@Model.TenSach</dd>
        <dt>Giá Bán</dt>
        <dd>@Model.GiaBan</dd>
        <dt>Ảnh Bìa</dt>
        <dd><img src="@Model.AnhBia" alt="Ảnh bìa" width="100" /></dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.MaSach)
        <button type="submit" class="btn btn-danger">Xóa</button> 
    @Html.ActionLink("Hủy", "Index");
}
</div>
